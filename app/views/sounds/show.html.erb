<h2 class="sound-title"><%= @sound.title %></h2>
<h4>by <%= link_to @sound.user.username, user_path(@sound.user.username) %></h4>

<p class="audio-player">
  <audio controls>
    <source src="/<%= @sound.soundfile.public_file_path %>" type="<%= @sound.soundfile.content_type %>"/>
  </audio>
</p>

<%= link_to 'Edit', edit_sound_path(@sound) %> |
