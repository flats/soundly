<h3>Login</h3>
<%= form_tag create_session_path, method: :put do %>
<%= label_tag :username %>
<%= text_field_tag :username %>
<%= label_tag :password %>
<%= password_field_tag :password %>
<%= submit_tag "Login" %>
<% end %>
<p>
Don't have an account? <%= link_to "Create an account", new_account_path %>.
</p>