<h3>Create an Account</h3>

<%= form_for @user do |f| %>
<%= f.label :username %>
<%= f.text_field :username %>
<%= f.label :real_name %>
<%= f.text_field :real_name %>
<%= f.label :password %>
<%= f.password_field :password %>
<%= f.label :bio %>
<%= f.text_area :bio %>
<%= f.submit "Create new account" %>
<% end %>

<%= link_to 'Back', users_path %>
